{% extends 'base.html.twig' %}

{% block title %}Recipient index{% endblock %}

{% block body %}
    <h1>Recipient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipient in recipients %}
            <tr>
                <td>{{ recipient.id }}</td>
                <td>{{ recipient.firstName }}</td>
                <td>{{ recipient.lastName }}</td>
                <td>{{ recipient.email }}</td>
                <td>
                    <a href="{{ path('app_recipient_show', {'id': recipient.id}) }}">show</a>
                    <a href="{{ path('app_recipient_edit', {'id': recipient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipient_new') }}">Create new</a>
{% endblock %}
